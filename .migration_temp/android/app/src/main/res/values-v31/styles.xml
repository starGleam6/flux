<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ (API 31+) 专用主题 - 使用 SplashScreen 兼容库 -->
    <style name="LaunchTheme" parent="Theme.SplashScreen">
        <!-- 纯黑色背景 -->
        <item name="windowSplashScreenBackground">@color/launch_background</item>
        <!-- 不显示图标 - 使用 1dp 透明 drawable -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_empty</item>
        <!-- 图标无背景 -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <!-- 过渡到的主题 -->
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/launch_background</item>
    </style>
</resources>
